{{- $workstation := false -}}
{{- $wsl := false -}}
{{- $android := false -}}
{{- $server := false -}}

{{- if (eq .chezmoi.hostname "hyperion") -}}
{{-   $workstation = true -}}
{{- else if (.chezmoi.kernel.osrelease | lower | contains "microsoft") -}}
{{-   $wsl = true -}}
{{- else if (eq .chezmoi.os "android") -}}
{{-   $android = true -}}
{{- else if (and (eq .chezmoi.os "linux") (eq .chezmoi.osRelease.id "ubuntu")) -}}
{{-   $server = true -}}
{{- end -}}

encryption = "age"
[age]
    identity = "~/chezmoi.key"
    recipient = "age1xxerfddw7shly3wumass56ax5zkf90gd73dqrl8exskynqwhkcmsxxtdn3"

[git]
    autoAdd = true
    autoCommit = true
    autoPush = false

[diff]
    exclude = ["scripts"]

[data]
    name = "Marco"
    email = "nobody@home.now"
    workstation = {{ $workstation }}
    wsl = {{ $wsl }}
    android = {{ $android }}
    server = {{ $server }}
