{{- $workstation := false -}}
{{- $tablet := false -}}
{{- $server := false -}}
{{- $android := false -}}

{{- if (eq .chezmoi.os "linux") -}}
{{-   if (eq .chezmoi.hostname "hyperion") -}}
{{-     $workstation = true -}}
{{-   else if (eq .chezmoi.hostname "prometheus") -}}
{{-     $tablet = true -}}
{{-   else -}}
{{-     $server = true -}}
{{-   end -}}
{{- else if (eq .chezmoi.os "android") -}}
{{-   $android = true -}}
{{- end -}}

