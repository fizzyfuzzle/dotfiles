{{- $workstation := false -}}
{{- $server := false -}}
{{- $mobile := false -}}

{{- if (eq .chezmoi.os "linux") -}}
{{-   if (eq .chezmoi.hostname "toolbx") -}}
{{-     $workstation = true -}}
{{-   else if (eq .chezmoi.username "droid") -}}
{{-     $mobile = true -}}
{{-   else -}}
{{-     $server = true -}}
{{-   end -}}
{{- end -}}

encryption = "age"
[age]
    identity = "~/chezmoi.key"
    recipient = "age1xxerfddw7shly3wumass56ax5zkf90gd73dqrl8exskynqwhkcmsxxtdn3"

[git]
    autoAdd = true
    autoCommit = true
    autoPush = false

[diff]
    exclude = ["scripts"]

[data]
    workstation = {{ $workstation }}
    server = {{ $server }}
    mobile = {{ $mobile }}
