[".submodules/zsh-autosuggestions"]
    type = "archive"
    url = "https://github.com/zsh-users/zsh-autosuggestions/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
[".submodules/zsh-history-substring-search"]
    type = "archive"
    url = "https://github.com/zsh-users/zsh-history-substring-search/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
[".submodules/zsh-syntax-highlighting"]
    type = "archive"
    url = "https://github.com/zsh-users/zsh-syntax-highlighting/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
{{- $ageVersionTag := (gitHubLatestRelease "FiloSottile/age").TagName }}
[".local/bin/age"]
    type = "archive-file"
    url = "https://github.com/FiloSottile/age/releases/download/{{ $ageVersionTag }}/age-{{ $ageVersionTag }}-{{ .chezmoi.os }}-{{ .chezmoi.arch }}.tar.gz"
    executable = true
    path = "age/age"
    refreshPeriod = "168h"
{{- $agePluginVersionTag := (gitHubLatestRelease "str4d/age-plugin-yubikey").TagName }}
[".local/bin/age-plugin-yubikey"]
    type = "archive-file"
    url = "https://github.com/str4d/age-plugin-yubikey/releases/download/{{ $agePluginVersionTag }}/age-plugin-yubikey-{{ $agePluginVersionTag }}-x86_64-{{ .chezmoi.os }}.tar.gz"
    executable = true
    path = "age-plugin-yubikey/age-plugin-yubikey"
    refreshPeriod = "168h"
