[alias]
    a = add
    aa = add --all
    b = branch
    c = commit
    ca = commit --amend
    co = checkout
    cs = clone --depth 1
    d = diff
    ib = init --bare
    l = log -10
    lines = "!git ls-files | xargs wc -l"
    p = push
    pf = push --force
    st = status
    r = reflog
    rc = reset --soft HEAD~1
    rmr = "!git checkout main && git branch --merged | egrep -v '(master|main)' | xargs git branch -d"
    rp = remote prune origin
[color]
    ui = auto
[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold
[core]
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.gitignore
    autocrlf = input
[diff]
    tool = meld
[difftool]
    prompt = false
[fetch]
    prune = true
[format]
    pretty = %h - %cd: %s
[init]
    defaultBranch = main
[log]
    date = format:"%Y-%m-%d @ %H:%M"
[merge]
    tool = meld
    conflictstyle = diff3
[mergetool]
    prompt = false
    keepBackup = false
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
[pull]
    ff = only
[push]
    default = simple
    followTags = true
[user]
    name = "Marco"
    email = "nobody@home.now"
[url "git@github.com:fizzyfuzzle/"]
    insteadOf = https://github.com/fizzyfuzzle/
