# Set APT defaults
APT="apt --quiet --assume-yes --no-install-recommends"

# Update system
$APT update
$APT upgrade

# Install packages
$APT install curl dnsutils git gnupg gzip inetutils mosh net-tools \
    openssh pinentry tmux vim zsh

# Cleanup
$APT autoremove
$APT autoclean

# Enable storage
[ ! -d "$HOME/storage" ] && termux-setup-storage

exit 0
