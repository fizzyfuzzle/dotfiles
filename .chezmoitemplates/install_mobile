# Set APT defaults
APT="apt --quiet --assume-yes --no-install-recommends"

# Update system
$APT update
$APT upgrade

# Install packages
$APT install age curl dnsutils git gzip inetutils mosh net-tools \
    openssh tmux neovim zsh

# Cleanup
$APT autoremove
$APT autoclean

# Generate SSH key
ssh-keygen -q -t ed25519 -f '~/.ssh/id_ed25519' -N ''

# Enable storage
[ ! -d "$HOME/storage" ] && termux-setup-storage

exit 0
